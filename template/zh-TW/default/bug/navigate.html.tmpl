[% PROCESS global/variables.none.tmpl %]
[% IF bottom_navigator == 1 %]
  <ul class="related_actions">
    <li><a href="show_bug.cgi?format=multiple&amp;id=
                [% bug.bug_id FILTER url_quote %]">友善列印格式</a></li>
    <li>&nbsp;-&nbsp;<a href="show_bug.cgi?ctype=xml&amp;id=
                        [% bug.bug_id  FILTER url_quote %]">XML</a></li>
    <li>&nbsp;-&nbsp;<a href="enter_bug.cgi?cloned_bug_id=
                        [% bug.bug_id  FILTER url_quote %]">複製這個 [% terms.Bug %]</a></li>
    [%# Links to more things users can do with this bug. %]
    [% Hook.process("links") %]
    <li>&nbsp;-&nbsp;<a href="#">回到頁首</a></li>
    </ul>
[% END %]

<div class="navigation">
[% IF last_bug_list.size > 0 %]
  [% this_bug_idx = lsearch(last_bug_list, bug.id) %]
  <b>[% terms.Bug %] 清單：</b>
  [% IF this_bug_idx != -1 %]
    ([% last_bug_list.size %] 個中的第 [% this_bug_idx + 1 %] 個)
  [% END %]

  [% IF this_bug_idx != -1 %]
    <a href="show_bug.cgi?id=
             [%- last_bug_list.first FILTER url_quote %]">第一個</a>
    <a href="show_bug.cgi?id=
             [%- last_bug_list.last FILTER url_quote %]">最後一個</a>
  [% END %]

  [% IF bug.bug_id %]
    [% IF this_bug_idx != -1 %]
      [% IF this_bug_idx > 0 %]
        [% prev_bug = this_bug_idx - 1 %]
        <a href="show_bug.cgi?id=
                 [%- last_bug_list.$prev_bug FILTER url_quote %]">前一個</a>
      [% ELSE %]
        <i><font color="#777777">前一個</font></i>
      [% END %]

      [% IF this_bug_idx + 1 < last_bug_list.size %]
        [% next_bug = this_bug_idx + 1 %]
        <a href="show_bug.cgi?id=
                 [%- last_bug_list.$next_bug FILTER url_quote %]">下一個</a>
      [% ELSE %]
        <i><font color="#777777">下一個</font></i>
      [% END %]
    [% ELSE %]
      (這個 [% terms.bug %] 不在你上次的搜尋結果中)
    [% END %]
  [% ELSE %]
    &nbsp;&nbsp;
  [% END %]

  &nbsp;&nbsp;<a href="buglist.cgi?regetlastlist=1">顯示上次的搜尋結果</a>
[% ELSE %]
  [%# With no list, don't show link to search results %]
  <i><font color="#777777">第一個</font></i>
  <i><font color="#777777">最後一個</font></i>
  <i><font color="#777777">前一個</font></i>
  <i><font color="#777777">後一個</font></i>
  &nbsp;&nbsp;
  <i><font color="#777777">沒有可用的搜尋結果</font></i>
[% END %]
</div>
