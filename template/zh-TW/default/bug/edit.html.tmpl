                              'qa_contact',
                              '[% bug.qa_contact.login FILTER js %]',
                              '[% user.login FILTER js %]');
            initDefaultCheckbox('qa_contact');
          </script>
        [% ELSE %]
          [% INCLUDE global/user.html.tmpl who = bug.qa_contact %]
        [% END %]
      </td>
    </tr>
    [% END %]
    <script type="text/javascript">
      assignToDefaultOnChange(['product', 'component'],
